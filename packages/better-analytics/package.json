{
  "name": "better-analytics",
  "version": "0.6.0",
  "description": "Micro-analytics JavaScript SDK for tracking page views and events",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js",
      "require": "./dist/next.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/next.ts src/server.ts --format esm,cjs --dts --minify",
    "dev": "tsup src/index.ts src/next.ts src/server.ts --format esm,cjs --dts --watch",
    "lint": "echo 'No linting configured'",
    "check-types": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "analytics",
    "tracking",
    "sdk",
    "javascript",
    "nextjs",
    "react",
    "server-side",
    "edge-functions"
  ],
  "license": "MIT",
  "peerDependencies": {
    "next": ">=13",
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "jsdom": "^23.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
