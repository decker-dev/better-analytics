{
  "name": "better-analytics",
  "version": "2.0.0",
  "description": "Micro-analytics JavaScript SDK for tracking page views and events",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./next": {
      "import": "./dist/next.js",
      "require": "./dist/next.cjs",
      "types": "./dist/next.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/next.ts --format esm,cjs --dts --minify",
    "dev": "tsup src/index.ts src/next.ts --format esm,cjs --dts --watch",
    "lint": "echo 'No linting configured'",
    "check-types": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "analytics",
    "tracking",
    "sdk",
    "javascript",
    "nextjs",
    "react"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18",
    "next": ">=13"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0",
    "@types/react": "^19.0.0",
    "@types/node": "^20.0.0"
  }
}
